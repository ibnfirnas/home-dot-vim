"==============================================================================
" Color
"==============================================================================
set t_Co=256
colorscheme solarized
let g:solarized_termcolors=256
let g:solarized_bold=1


"==============================================================================
" Font
"==============================================================================
set guifont=Monospace\ 10


"==============================================================================
" Cursorline
"==============================================================================
set cursorline
highlight CursorLine term=underline cterm=underline guibg=Grey22


"==============================================================================
" MacVim
"==============================================================================
if has("gui_macvim")
    set guifont=Menlo:h14
    set transparency=3
endif
