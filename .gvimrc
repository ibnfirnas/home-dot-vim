"==============================================================================
" Color
"==============================================================================
set t_Co=256
colorscheme twilight


"==============================================================================
" Font
"==============================================================================
set guifont=Monospace\ 9


"==============================================================================
" Cursorline
"==============================================================================
set cursorline
highlight CursorLine term=underline cterm=underline guibg=Grey22


"==============================================================================
" MacVim
"==============================================================================
if has("gui_macvim")
    set guifont=Menlo:h14
    set transparency=3
endif
